<div class="listing-card small" data-lat="<%= listing.geometry.coordinates[1] %>"
  data-lng="<%= listing.geometry.coordinates[0] %>">

  <div class="book-image">
    <img src="<%= listing.image %>" alt="<%= listing.title %>"
      onerror="this.onerror=null;this.src='https://images.unsplash.com/photo-1543002588-bfa74002ed7e?ixlib=rb-1.2.1&auto=format&fit=crop&w=800&q=80';" />
  </div>

  <p class="distance"> Calculating...</p>

  <h2>
    <a href="/listings/<%= listing._id %>">
      <%= listing.title.length> 40 ? listing.title.substring(0, 40) + '...' : listing.title %>
    </a>
  </h2>

  <p class="desc">
    <%= listing.description ? listing.description.substring(0, 80) + '...' : 'No description available.' %>
  </p>

  <div class="card-bottom-row">
    <div class="price">
      <%= listing.price ? 'â‚¹' + listing.price.toLocaleString("en-IN") : 'Free' %>
    </div>
    <div style="font-size: 0.85rem; color: #777;">
      <i class="fas fa-map-marker-alt"></i>
      <%= listing.location || 'India' %>
    </div>
  </div>
</div>